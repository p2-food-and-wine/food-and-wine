<body>

<form  action="/recipes/create" method="POST" enctype="multipart/form-data">
  <label for="name">Nombre</label>
  <input type="text" name="name" id="name">

  <label for="avatar">Foto</label>
  <input type="file" name="avatar" id="avatar">

  <label for="type">Tipo De Plato</label><br>
  <select name="type" id="type">
    <% dishOrder.forEach((type) => { %>
      <option value="<%= type %>" class="form-control" onclick="setValue('<%= type %>')"><%= type %></option>
    <%  }) %>
  </select>

  <label for="principalIngredient">Ingrediente Principal</label><br>
  <select name="principalIngredient" id="principalIngredient">
    <% principalIngredient.forEach((ingredient) => { %>
      <option value="<%= ingredient %>" class="form-control" onclick="setValue('<%= ingredient %>')"><%= ingredient %></option>
    <%  }) %>
  </select>

  <label for="ingredient">Ingredientes</label>
  <textarea type="text" name="ingredient" id="ingredient"></textarea>

  <label for="preparacion">Preparacion</label>
  <textarea type="text" name="preparacion" id="preparacion"></textarea>

  <button type="submit">Crear Receta</button>
</form>
<a href="/recipes">Recetas</a>
