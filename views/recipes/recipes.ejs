<form action="/recipes" method="POST">
  <select name="type" id="type">
    <% dishOrder.forEach((type) => { %>
      <option type="text" value="<%= type %>" class="form-control"><%= type %></option>
    <%  }) %>
  </select>
    <button type="submit">Buscar</button>
</form>

