<% if (user) { %>
  <h2>Hola <%= user.username %></h2>
<% } %>

<form action="/recipes" method="POST">
    <input type="search" name="" placeholder="Busca lo que te guste aqui" required="required">
    <button type="submit">Buscar</button>
</form>

<ul>
  <% recipes.forEach((recipe) => { %>
    <li>
      <h2> <%= recipe.name %></h2>
      <img src="<%= recipe.avatar%>" width=80 height=80 />
      <h2> <%= recipe.type %> </h2>


      <a href="/recipes/<%= recipe._id %>">Ver Receta</a>

    <% if (user._id.toString() == recipe.author.toString() ){ %>
        <a href="/recipes/<%= recipe._id %>/edit/">Editar</a>
        <a href="/recipes/<%= recipe._id %>/delete/">Eliminar</a>
    <% } %>

    </li>
  <%  }) %>
</ul>
