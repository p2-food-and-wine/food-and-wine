      <div class="card-image">
        <img src="<%= recipe.avatar%>" width="100" height="100" />
        </div>
    <div class="card-content grey darken-2">
      <h4 class="grey-text text-lighten-5"> <%= recipe.name %></h4>

      <h6 class="grey-text text-lighten-5"> Tipo De Plato : <%= recipe.type %> </h6>
