<ul>
  <% recipes.forEach((recipe) => { %>
    <li>
      <%= recipe.name %> - $<%= recipe.type %>
      <a href="/<%= recipe._id %>">View Details</a> |
      <a href="/<%= recipe._id %>/edit/">Edit</a> |
      <a href="/<%= recipe._id %>/delete/">Delete</a>
    </li>
  <%  }) %>
</ul>
